<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="iEco.Drawer" parent="">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="iEco.NavigationView" parent="Widget.Material3.NavigationView">
        <item name="itemTextAppearance">@style/iEco.NavigationView.TextAppearance</item>
        <item name="itemTextColor">@color/selector_nav_fg</item>
        <item name="itemIconTint">@color/selector_nav_fg</item>
        <item name="itemShapeFillColor">@color/selector_nav_bg</item>
        <item name="cornerSize">8dp</item>
        <item name="itemVerticalPadding">20dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.NavigationView.Item" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="iEco.NavigationView.TextAppearance" parent="">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/error_terracotta</item>
    </style>

    <style name="ThemeOverlay.iEco.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/surface_beige</item>
        <item name="fullscreenTextColor">@color/surface_beige</item>
    </style>
</resources>